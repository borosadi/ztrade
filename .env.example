# Ztrade Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Alpaca API (Required)
# ============================================================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# Anthropic Claude API (Optional - only for automated mode)
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# Reddit API (Optional - for Reddit sentiment analysis)
# Get from: https://www.reddit.com/prefs/apps
# ============================================================================
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT="Ztrade:v1.0 (by /u/your_username)"

# ============================================================================
# Database Configuration (Docker)
# ============================================================================
POSTGRES_DB=ztrade
POSTGRES_USER=ztrade
POSTGRES_PASSWORD=change_this_in_production

# Database URL (automatically constructed in docker-compose)
# DATABASE_URL=postgresql://ztrade:password@postgres:5432/ztrade

# ============================================================================
# Redis Configuration (Docker)
# ============================================================================
# REDIS_URL=redis://redis:6379/0

# ============================================================================
# Celery Configuration
# ============================================================================
CELERY_WORKER_CONCURRENCY=4
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================================================
# Flower Monitoring (Production)
# ============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=change_this_in_production
FLOWER_PORT=5555

# ============================================================================
# Dashboard Configuration
# ============================================================================
DASHBOARD_PORT=8501

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=development  # Options: development, production
LOG_LEVEL=INFO           # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# TradingView API (Optional - for advanced charting)
# ============================================================================
TRADINGVIEW_API_KEY=your_tradingview_api_key_here
